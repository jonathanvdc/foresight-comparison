cabal-version:       2.2

name:                hegg-bench
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/githubuser/hegg-bench#readme
license:             BSD-3-Clause
license-file:        LICENSE
author:              Author name here
maintainer:          example@example.com
copyright:           2025 Author name here
category:            Web
build-type:          Simple
extra-source-files:  README.md
                     CHANGELOG.md

executable hegg-bench
  hs-source-dirs:      src
  main-is:             Main.hs
  other-modules:       Bench.MM
                       Bench.Poly
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5, hegg, criterion
  ghc-options:         -Wall -O2
                       -Wcompat
                       -Widentities
                       -Wincomplete-record-updates
                       -Wincomplete-uni-patterns
                       -Wmissing-export-lists
                       -Wmissing-home-modules
                       -Wpartial-fields
                       -Wredundant-constraints

source-repository head
  type:     git
  location: https://github.com/githubuser/hegg-bench
